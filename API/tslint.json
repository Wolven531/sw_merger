{
    "rulesDirectory": [],
    "compilerOptions": {
        "target": "es7",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "paths": {
        }
    },
    "rules": {
        "no-internal-module": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "ignore"
                }
            }
        ]
    },
    "jsRules": {
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
